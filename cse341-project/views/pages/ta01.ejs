<!DOCTYPE html>
<html lang="en-US">

  <head>
    <% include ../includes/header.ejs %>
  </head>
  
  <body>
    <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <h2>Testing Heroku and Git push corrected git and named gitcopy for push</h2>
      </div>
    </div>
    <div class="container">
      <div>
        <!-- start of Requirement 01 -->
        <form action="/ta01/addUser" method="POST">
          <label for="newUser">New Username</label><br>
          <input type="text" name="newUser">
          <button type="submit">Add User</button>
        </form>
        <!-- End of Requirement 01 -->
      </div>
      <div>
        <!-- Start of Requirement 03 -->
        <form action="/ta01/removeUser" method="POST">
          <label for="removeUser">Username to remove</label><br>
          <input type="text" name="removeUser">
          <button type="submit">Remove User</button>
        </form>
        <!-- End of Requirement 03 -->
      </div>
      <div>
        <!-- Loop through User List as part of Requirement 01-->
        <h2>Users:</h2>
        <% for(user of users) { %>
          <p>
            <%= user %>
          </p>
          <% } %>
            <!-- End of Loop -->
      </div>
    </div>
</body>

</html>